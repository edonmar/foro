{% extends 'layout.html.twig' %}

{% block title %}
    Listado de emociones
{% endblock %}

{% block content %}
    <h1>Listado de emociones {% if is_granted('ROLE_ADMINISTRADOR') %}<a href="{{ path('emocion_nueva') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nueva emoci√≥n</a>{% endif %}</h1>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Icono</th>
            {% if is_granted('ROLE_ADMINISTRADOR') %}
                <th></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for emocion in emociones %}
            <tr>
                <td class="align-middle">
                    <a href="{{ path('emocion_temas_listar', {'id': emocion.id}) }}">{{ emocion.nombre }}</a>
                </td>
                <td class="align-middle">
                    <i class="{{ emocion.icono }}"></i>
                </td>
                {% if is_granted('ROLE_ADMINISTRADOR') %}
                    <td>
                        <a class="btn btn-success" href="{{ path('emocion_form', {'id': emocion.id}) }}">Editar</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
