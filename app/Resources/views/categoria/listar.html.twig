{% extends 'layout.html.twig' %}

{% block title %}
    Listado de categorías
{% endblock %}

{% block content %}
    <h1>Listado de categorías</h1>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Contenido</th>
        </tr>
        </thead>
        <tbody>
        {% for categoria in categorias %}
            <tr>
                <td class="align-middle"><a href="{{ path('categoria_temas_listar', {'id': categoria.id}) }}">{{ categoria.nombre }}</a></td>
                <td class="align-middle">
                    <p>Temas: {{ numTemas[loop.index - 1] }}</p>
                    <p>Respuestas: {{ numRespuestas[loop.index - 1] }}</p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
